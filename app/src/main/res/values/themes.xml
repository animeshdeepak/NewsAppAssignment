<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsAppAssignment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NewsAppAssignment" parent="Base.Theme.NewsAppAssignment">
        <item name="android:windowBackground">@color/white</item>
        <item name="fontFamily">@font/libre_baskerville_regular</item>
        <!-- below two lines make status bar gone -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.ButtonTheme" parent="android:Widget.Button">
        <item name="android:letterSpacing">.3</item>
        <item name="android:padding">@dimen/small_100</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.TextViewTheme" parent="android:Widget.TextView">
        <item name="android:letterSpacing">.3</item>
        <item name="android:padding">@dimen/normal_100</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.TextViewTitleTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_180_sp</item>
        <item name="fontFamily">@font/libre_baskerville_bold</item>
    </style>

    <style name="Theme.TextViewDescTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/small_100_sp</item>
        <item name="fontFamily">@font/libre_baskerville_regular</item>
    </style>

    <style name="Theme.TextViewSmallDesc" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">@dimen/small_120_sp</item>
    </style>

    <style name="Theme.RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/normal_100</item>
        <item name="color">@color/white</item>
    </style>
</resources>